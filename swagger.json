{
  "openapi": "3.0.0",
  "info": {
    "title": "Agrosistec",
    "version": "1.0",
    "description": "Agrosistec"
  },
  "tags": [
    {
      "name": "Login",
      "description": "Log in first of all."
    },{
      "name": "Usuario",
      "description": "Features for usuarios"
    },
    {
      "name": "Animal",
      "description": "Features for animal"
    }
  ],

  "paths": {
    "/Login": {
      "post": {
        "tags":["Login"],
        "summary": "Authenticate the given usuario.",
        "requestBody": {
          "description": "Usuario credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Auth"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentication was successful.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "401": {
            "description": "invalid credentials"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/usuario": {
      "post": {
        "tags": ["Usuario"],
        "summary": "Create a new usuario",
        "requestBody": {
          "description": "Data for a new usuario",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Usuario"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario created successfully!"
          },
          "400": {
            "description": "Request error"
          }
        }
      }
    },
    "/usuarios": {
      "get": {
        "tags": ["Usuario"],
        "summary": "Retrieves all usuarios.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of usuarios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Usuario"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Access denied"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/usuario/{usuarioId}": {
      "get":{
        "tags": ["Usuario"],
        "summary": "Get specific usuario",
        "parameters": [
          {
            "name": "usuarioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security":[
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Usuario"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Usuario"],
        "summary": "Updates a usuario",
        "parameters": [
          {
            "name": "usuarioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "New data for the usuario",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Usuario"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario updated"
          },
          "400": {
            "description": "Validation error"
          },
          "404": {
            "description": "Usuario not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "delete": {
        "tags": ["Usuario"],
        "summary": "Deletes a usuario",
        "parameters": [
          {
            "name": "usuarioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Usuario deleted"
          },
          "404": {
            "description": "Usuario not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    
    "/animal": {
      "get": {
        "tags": ["Animal"],
        "summary": "Retrieves all animals.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Listing All Animals",
            "content": {
              "application/json": {
                "schema": {
                  "type":"array",
                  "items": {
                    "$ref":"#/components/schemas/Animal"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Request error"
          }
        }
      }
    },
    "/animal/{animalId}": {
      "get": {
        "tags": ["Animal"],
        "summary": "Get specific animal",
        "parameters": [
          {
            "name": "animalId",
            "in": "path",
            "requery": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Animal data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref":"#/components/schemas/Animal"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Request error"
          },
          "404": {
            "description": "Animal not found"
          }
        }
      }
    },
    "/animal/{usuarioId}": {
      "post": {
        "tags": ["Animal"],
        "summary": "Creates a animal and adds it to a usuario",
        "parameters": [
          {
            "name": "usuarioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Data for a new animal",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Animal"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Animal added"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Access denied"
          },
          "404": {
            "description": "Usuario not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/animal/{animalId}/usuario/{usuarioId}": {
      "put": {
        "tags": ["Animal"],
        "summary": "Updates a animal's info",
        "parameters": [
          {
            "name": "animalId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "usuarioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "New data for the animal",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Animal"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Animal updated"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Access denied"
          },
          "404": {
            "description": "Animal not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "delete": {
        "tags": ["Animal"],
        "summary": "Deletes a animal from a usuario",
        "parameters": [
          {
            "name": "animalId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "usuarioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Animal deleted"
          },
          "401": {
            "description": "Access denied"
          },
          "404": {
            "description": "Animal not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Auth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "senha": {
            "type": "string",
            "format": "password"
          }
        },
        "required": [
          "email",
          "senha"
        ]
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "default": "joao"
          },
          "senha": {
            "type": "string",
            "format": "password",
            "default": "joaodogas"
          },
          "email": {
            "type": "string",
            "format": "email",
            "default": "jao@dasgaiolas.com"
          },
          "animal": {
            "type": "array",
            "default": []
          }
        },
        "required": [
          "nome",
          "senha",
          "email",
          "animal"
          
        ]
      },
      "Animal": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "default": ""
          },
          "raca": {
            "type": "string",
            "default": ""
          },
          "peso": {
            "type": "number",
            "format": "float",
            "default": 1
          },
          "mediaLeite": {
            "type": "string",
            "default": ""
          },
          "dataNasc": {
            "type": "string",
            "format": "date"
          },
          "dataDes": {
            "type": "string",
            "format": "date"
          },
          "sexo": {
            "type": "string",
            "default": ""
          },
          "faixaEta": {
            "type": "string",
            "default": ""
          },
          "status": {
            "type": "string",
            "default": ""
          }
        },
        "required": [
          "nome",
          "raca",
          "peso",
          "dataNasc",
          "sexo",
          "status"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}